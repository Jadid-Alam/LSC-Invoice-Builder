<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.collections.FXCollections?>
<?import java.lang.String?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.TextField?>
<?import org.controlsfx.control.ListActionView?>
<?import javafx.scene.control.Spinner?>

<?import javafx.scene.control.ScrollPane?>
<ScrollPane xmlns:fx="http://javafx.com/fxml" fitToWidth="true" fitToHeight="true">
  <content>
    <VBox alignment="CENTER" spacing="1.0" >


      <Label fx:id="customerLabel" text="Customer:"/>
      <ComboBox fx:id="customerComboBox"/>
      <Button text="Add a New Customer" onAction="#handleAddCustomer"/>

      <DatePicker fx:id="startDatePicker" promptText="Select a Start Date"/>
      <Label fx:id="startDateValidation"/>
      <DatePicker fx:id="endDatePicker" promptText="Select an End Date"/>
      <Label fx:id="endDateValidation"/>

      <VBox fx:id="paymentInformation" spacing="5" alignment="CENTER"/>

      <Label fx:id="fileOutputLabel" text="Save Invoice to: "/>
      <Button text="Browse" onAction="#handleBrowse"/>

      <Button text="Generate Invoice" onAction="#handleGenerateInvoice"/>

    </VBox>
  </content>
</ScrollPane>
